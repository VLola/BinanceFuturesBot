<UserControl x:Class="BinanceFuturesBot.Views.SymbolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BinanceFuturesBot.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="{Binding Path=SymbolModel.Name}"/>
        <TextBlock Grid.Column="1" Text="{Binding Path=SymbolModel.Price}"/>
        <TextBlock Grid.Column="2" Text="{Binding Path=SymbolModel.Open}"/>
        <TextBlock Grid.Column="3" Text="{Binding Path=SymbolModel.Close}"/>
        <TextBlock Grid.Column="4" Text="{Binding Path=SymbolModel.StopLoss}"/>
        <TextBlock Grid.Column="5" Text="{Binding Path=SymbolModel.Leverage}"/>
        <TextBlock Grid.Column="6" Text="{Binding Path=SymbolModel.PositionSide}"/>
    </Grid>
</UserControl>
